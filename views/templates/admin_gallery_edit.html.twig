{% extends layout %}
{% block content %}
<style>
    #fine-uploader {
        margin-top: 20px;
    }

    #save-form {
        width: 600px;
        height: 80px;
        margin-top: 25px;
        margin-left: auto;
        margin-right: auto;
    }

    #form-submit {
        width: 200px;
        height: 28px;    
        margin-left: auto;
        margin-right: auto;
        border-radius: 5px;
        font-size: 120%;
        font-family: Trebuchet MS, Arial, sans-serif;
        background-color: #00ABC7;
        color: white;
        display: block;
        outline: none;
    }

    #form-submit:hover {
        cursor: pointer;
    }

    #gallery-container {
        display: flex;
        flex-wrap: wrap;
        border-top: 1px solid black;
    }

    .image-container {
        width: 236px;
        margin-top: 10px;
        padding-top: 4px;
        margin-left: 8px;
        margin-right: 8px;
    }

    .image-wrapper {
        width: 100%;
        height: 200px;
        margin-left: 2px;
        margin-right: 2px;
        border-radius: 5px;
        overflow: hidden;
    }
    
    .image-wrapper img {
        min-width: 100%;
        min-height: 100%;
        max-width: 150%;
        max-height: 150%;
        cursor: pointer;
    }
    
    .image-container .image-wrapper{
        box-shadow: 0px 0px 10px blue;
    }

    .image-container ~ .image-container .image-wrapper {
        box-shadow: none;
    }
    
    .image-delete-button {
        width: 12px;
        height: 12px;
        padding-left: 1px;
        padding-bottom: 1px;
        line-height: 12px;
        text-align: center;
        font-family: Helvetica;
        font-weight: bold;
        color: #cc0000;
        background-color: #ffffff;
        border: 1px solid black;
        float: right;
        text-decoration: none;
        display: block;
        margin-bottom: 1px;
    }

    .image-cover-button {
        width: 12px;
        height: 12px;
        padding-left: 1px;
        padding-bottom: 1px;
        line-height: 12px;
        text-align: center;
        font-family: Helvetica;
        font-weight: bold;
        color: blue;
        background-color: white;
        border: 1px solid black;
        float: right;
        text-decoration: none;
        display: none;
        margin-bottom: 1px;
        margin-right: 2px;
        
    }
    
    .image-container ~ .image-container .image-cover-button {
        display: block;
    }
    
    a {
        text-decoration: none;
    }  
    
    #largeImgPanel {
        text-align: center;
        display: none;
        position: fixed;
        z-index: 100;
        top: 0; 
        left: 0; 
        width: 100%; 
        height: 100%;
        background-color: rgba(100,100,100,0.5);
    }
    
    #largeImg {
        height: 100%;
        cursor: pointer;
    }
</style>

<script src="inc/jquery/jquery.js"></script> 
<link href="inc/fine-uploader/fine-uploader-new.css" rel="stylesheet">
<script src="inc/fine-uploader/jquery.fine-uploader.js"></script>

