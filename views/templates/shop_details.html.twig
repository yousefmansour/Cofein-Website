{% extends layout %}

{% block articles %}

<div id="item">
    <img id="item-image" src="{{ content.image }}"/>
    <div id="item-details">
        <div id="item-name">{{ content.name }}</div>
        <div id="item-desc">{{ content.description }}</div>
        <div id="item-price">{{ content.price }} лв.</div>
        <a id="item-buy" href="shop?addtocart={{ content.id}}">Купи</a>
        <a id="back" href="/shop">Обратно</a>
    </div>
</div>

<style>
    #item {
        width: auto;
        height: 800px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 20px;
    }
    
    #item-image {
        float: left;
        width: 300px;
        height: 300px;
    }
    
    #item-details {
        float: left;
        width: 330px;
        height: 300px;
        border: 1px solid white;
        padding: 5px;
        margin-left: 10px;
        -webkit-box-sizing: border-box; 
        -moz-box-sizing: border-box;  
        box-sizing: border-box;         
    }
    
    #item-name {
        width: 100%;
        height: 60px;
        font-size: 24px;
        font-weight: bold;
    }
    
    #item-desc {
        width: 100%;
        height: 100px;
        font-size: 110%;
        border-bottom: 1px solid gray;
    }
    
    #item-price {
        width: 40%;
        height: 60px;
        float: left;
        font-size: 40px;
        font-weight: bold;
        color: #e7ac31;
    }
    
    #item-buy {
        width: 62px;
        height: 30px;
        font-size: 26px;
        font-weight: bold;
        color: white;
        background-color: #710002;
        padding: 0px 2px 2px 2px;
        float: right;
        margin-top: 10px;
        margin-left: 5px;
        border-radius: 5%;
        text-decoration: none;
    }
    
    #back {
        width: 90px;
        height: 24px;
        font-size: 20px;
        font-weight: bold;
        color: white;
        background-color: #710002;
        padding: 0px 2px 2px 2px;
        margin-top: 10px;
        margin-right: 5px;
        border-radius: 5%;
        text-decoration: none;
        float: left;
        clear: left;
    }
</style>
{% endblock %}

